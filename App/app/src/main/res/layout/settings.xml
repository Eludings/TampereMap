<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/test_settings"

    >

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fillViewport="true"
        android:scrollbarStyle="insideOverlay"
        android:scrollbarThumbVertical="@android:color/white"
        >

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@color/backgroundSettings"
            android:clickable="true"
            android:orientation="vertical"
            android:paddingBottom="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingStart="0dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/titleText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/backgroundUpper"
                android:fontFamily="sans-serif-smallcaps"
                android:paddingBottom="10dp"
                android:paddingEnd="10dp"
                android:paddingStart="55dp"
                android:paddingTop="10dp"
                android:text="@string/info_header"
                android:textAlignment="textStart"
                android:textColor="#FFF"
                android:textSize="30sp" />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/layout3"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/backgroundSettings"
        android:clickable="true"
        android:orientation="vertical"
        android:paddingBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingStart="0dp"
        android:weightSum="1">

        <Button
            android:id="@+id/button4"
            android:layout_height="60dp"

            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:background="@drawable/button_back"
            android:onClick="backpress"
            android:layout_alignBottom="@+id/info_btn"
            android:layout_width="70dp" />

        <Button
            android:id="@+id/info_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="31dp"
            android:background="@drawable/info_btn4"
            android:onClick="infoWindow"
            android:visibility="visible"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>


</RelativeLayout>








