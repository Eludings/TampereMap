<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundLower"
    android:clickable="true">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="115dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/backgroundUpper"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/info_header"
                android:text="@string/info_header"
                android:textSize="25sp"
                android:layout_centerHorizontal="true"
                android:textColor="#FFF"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/info_content"
                android:text="@string/info_content"
                android:textColor="#FFF"
                android:layout_below="@+id/info_header"
                android:layout_marginTop="15dp"
                android:textSize="17sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kayttoehdot"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:id="@+id/kayttoehdot"
                android:layout_below="@+id/info_content"
                android:layout_marginTop="15dp"
                android:textColor="#FFF"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kayttoehdot_content"
                android:textSize="17sp"
                android:layout_below="@+id/kayttoehdot"
                android:layout_marginTop="15dp"
                android:textColor="#FFF"
                />
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        >

        <Button
            android:id="@+id/button3"
            android:layout_height="60dp"
            android:layout_marginBottom="35dp"
            android:onClick="backpress"
            android:background="@drawable/button_back"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="35dp"
            android:layout_width="70dp" />
    </RelativeLayout>
</RelativeLayout>